import sys
input = sys.stdin.readline
n = int(input())
for i in range(1,n+1):
    print("{}".format("*"*i).ljust(n), end='')
    print("{}".format("*"*i).rjust(n))
for i in range(n-1,0,-1):
    print("{}".format("*"*i).ljust(n), end='')
    print("{}".format("*"*i).rjust(n))
